<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <android.support.design.button.MaterialButton
                    android:id="@+id/logout_btn"
                    android:layout_width="113dp"
                    android:layout_height="38dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/profile_img"
                    android:layout_toStartOf="@+id/profile_img"
                    android:background="#09c21b"
                    android:text="@string/log_out"
                    android:textColor="@color/white"
                    app:backgroundTint="#22A85B"
                    tools:layout_editor_absoluteX="29dp"
                    tools:layout_editor_absoluteY="373dp" />

                <ImageView
                    android:id="@+id/background_splash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/background" />

                <ImageView
                    android:id="@+id/profile_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="29dp"
                    android:src="@drawable/profilepic" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="52dp"
                    android:text="PLACEHOLDER NAME"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-52dp"
                    android:text="placeholderemail@placeholder.com"
                    android:textColor="@android:color/darker_gray" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <android.support.design.button.MaterialButton
                    android:id="@+id/discover_fourms_btn"
                    android:layout_width="322dp"
                    android:layout_height="85dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:background="@color/colorPrimary"
                    android:text="Discover Forums"
                    app:backgroundTint="@color/colorPrimary" />

                <android.support.design.button.MaterialButton
                    android:id="@+id/personal_forums_btn"
                    android:layout_width="324dp"
                    android:layout_height="85dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="37dp"
                    android:background="@color/colorPrimary"
                    android:text="Your Forums"
                    app:backgroundTint="@color/colorPrimary" />

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>


</android.support.constraint.ConstraintLayout>